<nav>
  <a href="/bands" class="back bg20" style="position: absolute;"><i class="material-icons">keyboard_arrow_left</i></a>
  <a href="/bands/{{band.band_id}}" class="link bg20 w250">{{band.name}}</a>
</nav>
<div id="content" class="band-content">
  <div id="gigs" class="panel">
    <div class="panel-side">
      <div class="heading">
        <div>Upcoming Gigs</div>
        {{#if @root.isAdmin}}
          <i class="material-icons add-gig">add</i>
          <input type="text" class="new-gig">
          <i class="material-icons submit-gig">check</i>
          <i class="material-icons cancel-gig">clear</i>
        {{/if}}
      </div>
      {{#band.gigs}}
        <label for="gig-{{gig_id}}" class="title">
          <div>{{date}}</div>
          <div>{{venue}}</div>
        </label>
      {{/band.gigs}}
      <div class="heading">Members</div>
      {{#band.members}}
        {{#if @root.isAdmin}}
          <input id="{{display_name}}" type="checkbox">
          <div class="member">
            <div><i class="material-icons remove">close</i></div>
            <label for="{{display_name}}">{{display_name}}</label>
            <i class="material-icons call">phone</i>
          </div>
        {{else}}
          <div class="member"><label class="w100p">{{display_name}}</label></div>
        {{/if}}
      {{/band.members}}
    </div>
    {{#band.gigs}}
      <input id="gig-{{gig_id}}" type="radio" name="gig">
      <div class="panel-main">

        <div class="gig-title">{{venue}}</div>
        <div class="gig-edit">
          <div class="gig-edit-edit">Edit</div>
          <div class="gig-edit-save"><i class="material-icons">check</i></div>
          <div class="gig-edit-cancel"><i class="material-icons">clear</i></div>
        </div>

        <div class="gig-info">
          <div class="gig-date"><div>Date</div><div>{{date}}</div></div>
          <div class="gig-load"><div>Load</div><div>{{loadInTime}}</div></div>
          <div class="gig-start"><div>Start</div><div>{{startTime}}</div></div>
          <div class="gig-end"><div>End</div><div>{{endTime}}</div></div>
        </div>
        <div class="gig-setlist">
          <div class="setlist-title">{{setlist_name}}</div>
          <div class='setlist-description'>{{description}}</div>
        </div>
        <div class="song-table">
          <div>Title</div>
          <div>Key</div>
          <div>Time Signature</div>
          <div>Tempo</div>
          <div>Feel</div>
        </div>
        {{#setlist.songs}}
          <div class="song">
            <div class="gig-song">{{song_title}}</div>
            <div class="song-info">
              <div class="song-key">{{key}}</div>
              <div class="time-signature">{{time_signature}}</div>
              <div class="feel">{{feel}}</div>
              <div class="tempo">{{tempo}}</div>
            </div>
            <div class="song-inputs">
              <input class="song-key" value="{{key}}">
              <input class="time-signature" value="{{time_signature}}">
              <input class="feel" value="{{feel}}">
              <input class="tempo" value="{{tempo}}">
            </div>
          </div>
        {{/setlist.songs}}
      </div>
    {{/band.gigs}}
  </div>
</div>
